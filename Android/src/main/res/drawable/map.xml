<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/path"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/mazeborder"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/unexplored"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/mazeborder"/>
        </shape>
    </item>
</selector>